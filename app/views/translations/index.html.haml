%div.row
  %div.twelve.columns

    %h2 Translations

    %div.tx-tran-create
      = link_to "Create new translation", new_translation_path

    - unless @translations.empty?

      = paginate @translations

      %ul.tx-translations
        - @translations.each do |tran|
          %li.tx-translation
            %p.tx-list-header
              = link_to tran.name, edit_translation_path(tran)
            %p.tx-list-description= tran.description
            %div.tx-list-statuses
              %span.has-tip{ 'title' => get_active_description(tran), 'class' => get_active_icon(tran), 'style' => 'font-size: 22pt;' }
              %span.has-tip{ 'title' => get_secure_description(tran), 'class' => get_secure_icon(tran), 'style' => 'font-size: 22pt;' }
    - else
      %div.tx-empty-list
        %p You do not currently have any transations.
